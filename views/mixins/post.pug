mixin post(post)
    div(class="max-w-2xl w-full px-8 py-4 bg-white rounded-lg shadow-md dark:bg-gray-800")
        div(class="flex items-center justify-between mt-4")
            div(class="flex items-center justify-start")
                if user
                    img(class="hidden object-cover w-10 h-10 mr-2 rounded-full sm:block", src=`data:image/png;base64,${post.user.identicon}`, alt="avatar")
                    a(href= user.id.toString() === post.user._id.toString() ? "/profile" : post.user.url, class="text-gray-700 cursor-pointer dark:text-gray-400", tabindex="0", role="link")= `@${post.user.username}`
                else
                    a(href="/signin" class="text-gray-700 cursor-pointer dark:text-gray-400", tabindex="0", role="link") Sign in to see users
        div(class="mt-2")
            p(class="mt-2 text-gray-600 dark:text-gray-300")= post.content
        div(class="flex items-center justify-between")
            span(class="text-sm font-light text-gray-600 dark:text-gray-400")= post["read-date"]