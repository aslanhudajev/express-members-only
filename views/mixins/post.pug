mixin post(post)
    div(class="max-w-2xl w-full px-8 py-4 bg-white rounded-lg shadow-md dark:bg-gray-800")
        div(class="flex items-center justify-between mt-4")
            div(class="flex items-center justify-start")
                img(class="hidden object-cover w-10 h-10 mr-2 rounded-full sm:block", src="https://images.unsplash.com/photo-1502980426475-b83966705988?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=40&q=80", alt="avatar")
                a( href=post.user.url class=" text-gray-700 cursor-pointer dark:text-gray-200", tabindex="0", role="link")= `@${post.user.username}`
        div(class="mt-2")
            p(class="mt-2 text-gray-600 dark:text-gray-300")= post.content
        div(class="flex items-center justify-between")
            span(class="text-sm font-light text-gray-600 dark:text-gray-400")= post["read-date"]
